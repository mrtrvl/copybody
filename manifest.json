{
  "name": "Copy body",
  "description": "Copy body element from webpage into clipboard",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/images/icon16.png",
    "32": "/images/icon32.png",
    "48": "/images/icon48.png",
    "128": "/images/icon128.png"
  },
  "commands": {
    "copyBody": {
      "suggested_key": {
        "default": "Ctrl+Shift+E",
        "mac": "Command+Shift+E"
      },
      "description": "Copy body",
      "global": true
    }
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
      "storage",
      "activeTab",
      "scripting"
    ]
}